<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Home">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/titleMarginBottom"
        android:text="@string/title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/titleTextColor" />

    <Button
        android:id="@+id/btn_spotifyStreamer"
        style="@style/NormalButton"
        android:layout_below="@id/txt_title"
        android:text="@string/spotifyStreamer" />

    <Button
        android:id="@+id/btn_scoresApp"
        style="@style/NormalButton"
        android:layout_below="@id/btn_spotifyStreamer"
        android:text="@string/scoresApp" />

    <Button
        android:id="@+id/btn_libraryApp"
        style="@style/NormalButton"
        android:layout_below="@id/btn_scoresApp"
        android:text="@string/libraryApp" />

    <Button
        android:id="@+id/btn_buildItBigger"
        style="@style/NormalButton"
        android:layout_below="@id/btn_libraryApp"
        android:text="@string/buildItBigger" />

    <Button
        android:id="@+id/btn_xyzReader"
        style="@style/NormalButton"
        android:layout_below="@+id/btn_buildItBigger"
        android:text="@string/xyzReader" />

    <Button
        android:id="@+id/btn_capstoneApp"
        style="@style/HighlightButton"
        android:layout_below="@+id/btn_xyzReader"
        android:text="@string/capstone" />
</RelativeLayout>
